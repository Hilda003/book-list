{
  "name": "book-list",
  "version": "1.0.0",
  "description": "A modern bookshelf management application with Vue.js frontend and Hapi.js backend",
  "main": "src/server.js",

  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.js",
    "dev:client": "vite",
    "start": "node src/server.js",
    "build": "vite build",
    "preview": "vite preview",
    "setup:db": "node scripts/setup-database.js"
  },
  "keywords": [
    "bookshelf",
    "books",
    "reading",
    "vue",
    "hapi",
    "mysql",
    "laragon"
  ],
  "author": "Hilda",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "mysql2": "^3.6.5",
    "nanoid": "^3.3.7",
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}